<%- include('../partials/header') %>

<h3 class="text-center">Add Photographer</h3>
<form action="/photographers" method="POST" class="form-group add-model">
	<label for="name">Name</label>
	<div class="form-group" id="name">
		<label for="name">
			<input class="form-control" type="text" id="name" placeholder="Name" name="photographer[name][first]" required>
		</label>
		<label for="last-name">
			<input type="text" placeholder="Last Name" name="photographer[name][last]" class="form-control" required>
		</label>		
	</div>
	<div class="form-group">
		<label for="category">Type of Photographer</label>
		<select class="form-control" name="photographer[category]" id="category">
			<option value="" selected disabled>Category</option>
			<option value="Street">Street</option>
			<option value="Cosplay">Cosplay</option>
			<option value="Nature">Nature</option>
			<option value="Boudoir">Boudoir</option>
		</select>
	</div>
	<div class="form-group">
		<label for="profile-pic">Profile Photo</label>
		<input class="form-control" type="text" id="profile-pic" placeholder="Profile Picture" name="photographer[profileImg]" required>	
	</div>
	<div class="form-group">
		<label for="add-work">Additonal Work</label>
		<ul class="all-images" id="add-work">
			<li class="list-group-item">
				<input class="form-control" type="text" id="image" placeholder="Image URL" name="photographer[images][0]">
			</li>
			<li class="list-group-item">
				<input class="form-control" type="text" id="image" placeholder="Image URL" name="photographer[images][1]">
			</li>
				<li class="list-group-item">
				<input class="form-control" type="text" id="image" placeholder="Image URL" name="photographer[images][2]">
			</li>
		</ul>
	</div>
	<div class="form-group">
		<label for="age">Age</label>		
		<input type="number" id="age" placeholder="Age" class="form-control" name="photographer[age]">
	</div>
	<div class="form-group">
		<label for="experience">Years of Experience</label>
		<input type="number" class="form-control" id="experience" placeholder="Years of experience" name="photographer[experience]">		
	</div>
	<div class="form-group">
		<label for="desc">Description</label>		
		<textarea class="form-control" placeholder="Tell the world a little bit about yourself!" name="photographer[desc]" id="desc" cols="30" rows="10"></textarea>
	</div>
	<button class="btn btn-success" type="submit">Submit</button>
</form>

<%- include('../partials/footer') %>
