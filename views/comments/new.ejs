<%- include('../partials/header') %>
<form class="form-group add-comment" action="/models/<%= model._id %>/comments" method="POST">
	<h3 class="text-center">Add New Comment</h3>
	<label for="comment">
		<textarea class="form-control" name="comment[text]" id="comment" cols="30" rows="10" placeholder="How did you feel about this model?"></textarea>
	</label>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

