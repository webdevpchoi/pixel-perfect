<%- include('../partials/header') %>
<form action="/models/<%= model._id %>/comments" method="POST">
	<h1>Add New Comment</h1>
	<label for="comment">
		<textarea name="comment[text]" id="comment" cols="30" rows="10" placeholder="How did you feel about this model?"></textarea>
	</label>
	<label for="author">
		<input type="text" name="comment[author]" id="author" placeholder="Name">
	</label>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('../partials/footer') %>
