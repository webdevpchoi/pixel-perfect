<%- include('../partials/header') %>
<div class="add-comment">
	<form class="form-group" action=<%= (isModel) ? "/models/" + model._id + "/comments" : "/photographers/" + photographer._id + "/comments" %> method="POST">
	<h3 class="text-center name-banner">Add Comment</h3>
	<label for="comment">
		<textarea class="form-control" name="comment[text]" id="comment" cols="30" rows="10" placeholder="How did you feel about this model?"></textarea>
	</label>
	<button type="submit" class="btn btn-primary">Submit</button>
	</form>	
</div>

